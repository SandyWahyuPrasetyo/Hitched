<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:background="#F6ECEB"
    android:paddingRight="@dimen/activity_horizontal_margin">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateGrid"
        android:layout_below="@+id/nameLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Are Getting Hitched On"
            android:id="@+id/simpletext"
            android:layout_column="0"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_columnSpan="3" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentStart="true"
        android:id="@+id/nameLayout"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You"
            android:id="@+id/you"
            android:layout_column="0"
            android:layout_row="0"
            android:paddingRight="10sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_column="1"
            android:src="@mipmap/ic_launcher"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your"
            android:id="@+id/your"
            android:layout_column="2"
            android:layout_row="0"
            android:paddingLeft="10sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/dateGrid"
        android:layout_alignParentStart="true"
        android:id="@+id/datelayout"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Month"
            android:id="@+id/tv1"
            android:padding="5sp"
            android:layout_below="@+id/dateGrid"
            android:layout_toEndOf="@+id/month"
            android:gravity="center"
            android:textColor="#DE84B5" />
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundtextview"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mon"
                android:id="@+id/month"
                android:gravity="center"
                android:layout_above="@+id/frameLayout"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/tv3"
            android:textSize="25sp"
            android:paddingLeft="3sp"
            android:paddingRight="3sp"
            android:textStyle="bold" />
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundtextview"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Day"
                android:id="@+id/day"
                android:layout_below="@+id/dateGrid"
                android:layout_alignParentStart="true"
                android:background="#88CDE6"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day   "
            android:id="@+id/tv2"
            android:padding="5sp"
            android:layout_below="@+id/dateGrid"
            android:layout_toEndOf="@+id/month"
            android:gravity="center"
            android:textColor="#DE84B5" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateGrid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:text="Venue"
            android:id="@+id/venue"
            android:layout_gravity="left|top"
            android:height="70dp"
            android:width="100dp"
            android:background="@mipmap/mainvenue"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="10sp" />

        <Button
        android:layout_width="80sp"
        android:layout_height="80sp"
            android:id="@+id/dress"
        android:layout_gravity="center_horizontal|top"
        android:height="70dp"
        android:width="100dp"
        android:background="@mipmap/maindress"
        android:textColor="#ffffff"
        android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="10sp" />

        <Button
        android:layout_width="80sp"
        android:layout_height="80sp"
            android:id="@+id/registry"
        android:layout_gravity="center_horizontal"
        android:height="70dp"
        android:width="100dp"
        android:background="@mipmap/mainregistry"
        android:textColor="#ffffff"
        android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="10sp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/guestlist"
            android:layout_gravity="left|center_vertical"
            android:background="@mipmap/mainguestlist"
            android:textColor="#000000"
            android:width="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:padding="10sp" />

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/invites"
            android:height="70dp"
            android:width="100dp"
            android:background="@mipmap/maininvites"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10sp" />

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/tasks"
            android:height="70dp"
            android:width="100dp"
            android:background="@mipmap/maintasks"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="10sp" />

        <Button
        android:layout_width="80sp"
        android:layout_height="80sp"
            android:id="@+id/vendor"
            android:height="70dp"
        android:width="100dp"
        android:background="@mipmap/mainvendor"
        android:textColor="#ffffff"
        android:onClick="launchActivity"
        android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="10sp" />

        <Button
        android:layout_width="80sp"
        android:layout_height="80sp"
            android:id="@+id/budget"
            android:height="70dp"
        android:width="100dp"
        android:background="@mipmap/mainbudget"
        android:textColor="#ffffff"
        android:textStyle="bold"
            android:layout_above="@+id/frameLayout3"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="3"
            android:padding="10sp" />

    </GridLayout>

    <GridLayout
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/gridLayout"
        android:id="@+id/gridLayout2">

        <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:text="Itinerary"
        android:id="@+id/itinerary"
            android:background="#88CDE6"
        android:textColor="#ffffff"
        android:width="100sp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:text="Picture"
        android:id="@+id/picture"
        android:layout_gravity="center_vertical"
            android:width="100sp"
        android:background="#88CDE6"
        android:textColor="#ffffff"
            android:onClick="pictureActivity"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:text="Assign Seats"
            android:id="@+id/assignseats"
            android:background="#88CDE6"
            android:textColor="#ffffff"
            android:width="100sp"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/gap"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView5"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="5sp" />

        <Button
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:id="@+id/honeymoon"
            android:width="100sp"
            android:background="#88CDE6"
            android:textColor="#ffffff"
            android:layout_row="2"
            android:layout_column="2"
            android:text="HONEYMOON" />

        <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:text="CONTACTS"
        android:id="@+id/contacts"
            android:background="#88CDE6"
        android:textColor="#ffffff"
        android:width="100sp"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:text="Cake"
            android:id="@+id/cake"
            android:background="#88CDE6"
            android:textColor="#ffffff"
            android:width="100sp"
            android:layout_row="4"
            android:layout_column="2" />
    </GridLayout>

    <Button
        android:layout_width="320sp"
        android:layout_height="40sp"
        android:text="UPDATE MY ACCOUNT"
        android:id="@+id/update"
        android:background="#88CDE6"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignStart="@+id/gridLayout2"
        android:layout_marginTop="10sp"
        android:textColor="#ffffff" />

</RelativeLayout>
