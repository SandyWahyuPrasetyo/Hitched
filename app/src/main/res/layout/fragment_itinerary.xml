<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="ADD ITEM"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#DE84B5" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textStyle="bold"
            android:textColor="#DE84B5"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a time."
            android:id="@+id/itinerary_time_bu"
            android:background="#88CDE6"
            android:textColor="#ffffff"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textStyle="bold"
            android:textColor="#DE84B5"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="16sp" />

        <EditText
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:id="@+id/titleEdit_itin"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assigned:"
            android:textStyle="bold"
            android:textColor="#DE84B5"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="16sp" />

        <EditText
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Assigned"
            android:id="@+id/assignedEdit"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip:"
            android:textStyle="bold"
            android:textColor="#DE84B5"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="16sp" />

        <EditText
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="Tip"
            android:id="@+id/tipEdit"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bu_dialog_delete"
            android:id="@+id/bu_itin_delete"
            android:visibility="gone"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="@string/bu_dialog_btn_label"
            android:id="@+id/bu_itin_update"
            android:background="#88CDE6"
            android:textColor="#ffffff"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center" />
    </GridLayout>

</LinearLayout>