<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uco.weddingcrashers.hitched.ItineraryActivity"
    android:orientation="vertical"
    android:background="#F6ECEB">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WEDDING ITINERARY"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:id="@+id/itinerary_list" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    "
            android:id="@+id/gap"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:onClick="emailItinerary"
            android:id="@+id/emailItinerary"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@mipmap/itineraryemail"
            android:layout_gravity="left" />

        <Button
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:onClick="createDialog"
            android:id="@+id/addItinItem"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@mipmap/pinkadd"
            android:layout_gravity="right" />

    </GridLayout>


</LinearLayout>
