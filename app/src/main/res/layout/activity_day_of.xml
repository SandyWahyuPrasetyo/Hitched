<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#a5a5a5">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="140sp"
        android:id="@+id/vowsButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/vows" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="140sp"
        android:id="@+id/menuButton"
        android:layout_below="@+id/vowsButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="140sp"
        android:id="@+id/iteneraryButton"
        android:layout_below="@+id/menuButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/itinerary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="140sp"
        android:id="@+id/seatingButton"
        android:layout_below="@+id/iteneraryButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/seating" />
</RelativeLayout>