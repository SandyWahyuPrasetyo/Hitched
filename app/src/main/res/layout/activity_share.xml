<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uco.weddingcrashers.hitched.EditVenueActivity"
    android:background="#88CDE6">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shareVenueButton"
        android:textColor="#FFFFFF"
        android:background="#88CDE6"
        android:layout_weight="0.48"
        android:layout_gravity="center"
        android:width="100sp"
        android:layout_column="2"
        android:layout_row="0"
        android:height="40sp"
        android:layout_marginRight="60sp"
        android:hint="Used"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:text="Share!"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/shareEditText"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:id="@+id/imageView3"
        android:src="@mipmap/venueshare"
        android:paddingBottom="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareEditText"
            android:text="Enter Username You Want to Share With"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

</RelativeLayout>
