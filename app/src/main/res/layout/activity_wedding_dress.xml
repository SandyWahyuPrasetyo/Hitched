<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uco.weddingcrashers.hitched.WeddingDressActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search!"
        android:id="@+id/dressSearchButton"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/myCityText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myCityText"
        android:text="Enter City"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myStateText"
        android:layout_below="@+id/myCityText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/myCityText"
        android:text="Enter State (Two Letter Abbreviation)"
        android:gravity="center"
        android:inputType="textCapCharacters"/>

</RelativeLayout>
