<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F1EFF0"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/news4"
        android:padding="10dp">
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/arrow_l"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HoneymoonArea"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <edu.uco.weddingcrashers.hitched.AutoScrollViewPager
            android:id="@+id/autopager"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            />
        <edu.uco.weddingcrashers.hitched.CirclePageIndicator
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/indicator"
            android:padding="10dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/USA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="USA"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="@color/color_777572"></View>
        <TextView
            android:id="@+id/Caribbean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Caribbean"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"

            android:background="@color/color_777572"></View>
        <TextView
            android:id="@+id/Europe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Europe"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/color_777572"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Mexico"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Mexico"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"

            android:background="@color/color_777572"></View>
        <TextView
            android:id="@+id/Canada"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Canada"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"

            android:background="@color/color_777572"></View>
        <TextView
            android:id="@+id/Asia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Asia"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/color_777572"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <Button
                android:id="@+id/bt1"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Nearby"
                android:textColor="@color/news4"
                />
            <Button
                android:id="@+id/bt2"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Hot"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/ll"
            android:orientation="horizontal">
            <View
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/news4"
                android:layout_height="1dp"></View>
            <View
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="1dp"></View>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/content"
            android:layout_below="@+id/ll1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"

            >

        </RelativeLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>