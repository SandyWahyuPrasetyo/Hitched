<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uco.weddingcrashers.hitched.WeddingDressList"
    tools:showIn="@layout/activity_wedding_dress_list"
    android:background="#F6ECEB">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbars"
        ></include>

    <Button
        android:id="@+id/fab"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:background="@mipmap/weddingdresssearch"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/dlistView"
        android:layout_alignParentEnd="true" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400sp"
        android:id="@+id/dlistView"
        android:paddingRight="15sp"
        android:paddingLeft="15sp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search"
        android:id="@+id/textView4"
        android:layout_below="@+id/fab"
        android:layout_alignStart="@+id/fab"
        android:textColor="#74bfda"
        android:textStyle="bold" />

</RelativeLayout>
